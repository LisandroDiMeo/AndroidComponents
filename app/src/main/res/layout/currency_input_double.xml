<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginEnd="5dp"
        android:translationX="5dp"
        android:layout_marginBottom="10dp"
        android:text="$"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_extrabolditalic"
        app:layout_constraintStart_toStartOf="@id/primaryValue"
        app:layout_constraintTop_toTopOf="@id/primaryValue"
        app:layout_constraintBottom_toBottomOf="@id/primaryValue"
        app:layout_constraintEnd_toStartOf="@id/primaryValue"
        />
    <EditText
        android:layout_marginTop="60dp"
        android:id="@+id/primaryValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:paddingHorizontal="20dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:backgroundTint="@color/purple_200"
        android:fontFamily="@font/poppins_extrabolditalic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="1234"
        android:inputType="number" />
    <EditText
        android:id="@+id/secondaryValue"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:translationY="-18dp"
        android:fontFamily="@font/poppins_extrabolditalic"
        app:layout_constraintStart_toEndOf="@id/primaryValue"
        app:layout_constraintTop_toTopOf="@id/primaryValue"
        app:layout_constraintBottom_toBottomOf="@id/primaryValue"
        android:inputType="number"
        android:maxLength="2"/>

</androidx.constraintlayout.widget.ConstraintLayout>